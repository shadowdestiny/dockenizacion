			<div class="form-group">
			    <button type="submit" class="btn btn-primary btn-sm"><?= $this->translate('search') ?></button>
			</div>
		    </div>
		</form>
	    </div>
	    <br class="clearfix" />

	    <div class="table-responsive">
		<table class="table table-striped table-bordered">
		    <thead>
			<tr>
			    <th>KEY</th>
			    <? if ($this->language1 != '0') { ?>
    			    <th class="<?= $this->language1 ?> lang"><?= $this->translate('language_' . $this->language1) ?></th>
			    <? } ?>
			    <? if ($this->language2 != '0' && $this->language2 != $this->language1) { ?>
    			    <th class="<?= $this->language2 ?> lang"><?= $this->translate('language_' . $this->language2) ?></th>
			    <? } ?>
			    <th><?=$this->translate('options')?></th>
			</tr>
		    </thead>
		    <? foreach ($this->list as $item) { ?>

    		    <tr id="key<?= $item['translation_id'] ?>">
    			<td><?= $item['key'] ?></td>
			    <? if ($this->language1 != '0') { ?>
				<td class="<?= $this->language1 ?> lang">
				    <a href="#" class="editable" data-name="value_<?= $this->language1 ?>" data-pk="<?= $item['translation_id'] ?>" data-type="text"  data-url="<?= $this->url(Array('action' => 'edit', 'translation_id' => $item['translation_id'])) ?>"><?= $item[$this->language1] ?></a>
				</td>
			    <? } ?>
			    <? if ($this->language2 != '0' && $this->language2 != $this->language1) { ?>
				<td class="<?= $this->language2 ?> lang">
				    <a href="#" class="editable" data-name="value_<?= $this->language2 ?>" data-pk="<?= $item['translation_id'] ?>" data-type="text"  data-url="<?= $this->url(Array('action' => 'edit', 'translation_id' => $item['translation_id'])) ?>"><?=$item[$this->language2]; ?></a>
				</td>
			    <? } ?>
    			<td>
    			    <a href="<?= $this->url(Array('action' => 'edit', 'translation_id' => $item['translation_id'])) ?>"><i class="glyphicon glyphicon-pencil tip" title="<?= $this->translate('edit') ?>"></i></a>
					<? if(hasAccess("acp_translation_delete")){ ?>
						<a href="#" data-href="<?= $this->url(Array('action' => 'del', 'translation_id' => $item['translation_id'])) ?>" class="popup"><i class="glyphicon glyphicon-trash tip" title="<?= $this->translate('delete') ?>"></i></a>
					<? } ?>
    			</td>
    		    </tr>
		    <? } ?>
		</table>
	    </div>
	</div>
    </div>
