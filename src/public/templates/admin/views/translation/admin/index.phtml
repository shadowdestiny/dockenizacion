		    </div>
		    <div class="form-group">
			<select  class="form-control input-sm" id="lang2" name="language2">
			    <option value="0"><?= $this->translate('display_language') ?></option>
			    <? foreach ($this->arrLang as $language) { ?>
    			    <option value="<?= $language ?>" <?= ($language == $this->language2) ? 'selected="selected"' : '' ?> ><?= $this->translate('language_' . $language) ?></option>
			    <? } ?>
			</select>
		    </div>
		    <div class="form-group">
			<select  class="form-control input-sm" id="type" name="type">
			    <option value="all" <?= ($this->type == 'all') ? 'selected="selected"' : '' ?>><?= $this->translate('all') ?></option>
