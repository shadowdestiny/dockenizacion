<script>
$(document).ready(function(){
	$('.numbers.main a').click(function(){
		active = $('.numbers.main').find('.btn-success').length;

		if ($(this).hasClass('btn-success')){
			$(this).removeClass('btn-success');
			$(this).children('input').remove();
		} else if (active < 5){
			$(this).addClass('btn-success');
			number = $(this).html();
			input = '<input type="hidden" name="number[]" value="' + number + '">';
			$(this).append(input);
		} else {

		}
	});
	$('.numbers.stars a').click(function(){
		active = $('.numbers.stars').find('.btn-warning').length;

		if ($(this).hasClass('btn-warning')){
			$(this).removeClass('btn-warning');
		} else if (active < 2){
			$(this).addClass('btn-warning');
		} else {

		}
	});

});
</script>
