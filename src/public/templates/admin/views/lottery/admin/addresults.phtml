	<a class="btn btn-sm btn-default" style="width: 36px;margin-bottom:  4px;"><?=$i?></a>
	<? } ?>
</div>
<h5><?=$this->translate('star_numbers')?></h5>
<div class="numbers stars">
	<? for ($i = 1; $i <= 11; $i++) { ?>
	<a class="btn btn-default btn-sm" style="width: 36px;margin-bottom:  4px;"><?=$i?></a>
	<? } ?>
</div>
</form>
</div>
