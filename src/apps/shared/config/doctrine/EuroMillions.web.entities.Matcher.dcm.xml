<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="EuroMillions\web\entities\Matcher" table="matcher" repository-class="EuroMillions\web\repositories\MatcherRepository">
        <id name="id" type="integer">
            <generator strategy="IDENTITY"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>
        <field name="matchSide" type="string" length="1"/>
        <field name="drawDate" type="date"/>
        <field name="matchStatus" type="string" length="10"/>
        <field name="matchID" type="bigint" column="matchID"/>
        <field name="matchDate" type="datetime" column="matchDate"/>
        <embedded name="prize" class="Money\Money"/>
        <many-to-one target-entity="EuroMillions\web\entities\LogValidationApi" field="providerBetId">
            <join-column name="providerBetId" referenced-column-name="id_ticket"/>
        </many-to-one>
        <many-to-one target-entity="EuroMillions\web\entities\User" field="userId">
            <join-column name="userId" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>