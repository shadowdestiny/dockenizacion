<div class="pagination">
    <div class="centered">
        <?php if($pagination['isFirst']){ ?>
            <span class="page active">first</span>
        <?php }else { ?>
            <a href="<?= $pagination['first_url'] ?>" class="page gradient">first</a>
        <?php } ?>
        <?php foreach($pagination['pages'] as $page): ?>
            <?php if(!$page['isSeparator']): ?>
                <?php if($page['class'] != null): ?>
                    <span class="page active"><?= $page['num'] ?></span>
                <?php else: ?>
                    <a href="<?= $page['url'] ?>" class="page gradient"
                       data-start="<?= $page['num'] ?>">
                        <?= $page['num'] ?>
                    </a>
                <?php endif ?>
            <?php else: ?>
                <a href="#" onclick="return false">
                    <?= $page['num'] ?>
                </a>
            <?php endif; ?>
        <?php endforeach ?>
        <?php if($pagination['isLast']): ?>
            <span class="page active">last</span>
        <?php else: ?>
            <a href="<?=$pagination['next_url'] ?>" class="page gradient">next</a>
            <a href="<?=$pagination['last_url'] ?>" class="page gradient">last</a>
        <?php endif ?>
    </div>
</div>