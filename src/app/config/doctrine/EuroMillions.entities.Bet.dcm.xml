<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="EuroMillions\entities\Bet" table="bets"
            repository-class="EuroMillions\repositories\BetRepository">

        <id name="id" type="integer">
            <generator strategy="IDENTITY"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <many-to-one field="euromillionsDraw" target-entity="EuroMillions\entities\EuroMillionsDraw" >
            <join-column name="euromillions_draw_id" referenced-column-name="id" />
        </many-to-one>
        <many-to-one target-entity="EuroMillions\entities\PlayConfig" inversed-by="playConfig"
                     field="play_config">
        </many-to-one>

    </entity>
</doctrine-mapping>