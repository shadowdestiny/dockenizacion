<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="EuroMillions\entities\PaymentMethod" table="payment_methods" repository-class="EuroMillions\repositories\PaymentMethodRepository">
        <id name="id" type="integer">
            <generator strategy="IDENTITY"/>
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>
        <field name="company" type="string"/>
        <field name="type" type="string"/>
        <field name="cvv" type="integer"/>

        <embedded name="cardNumber" class="EuroMillions\vo\CardNumber" use-column-prefix="false"/>
        <embedded name="cardHolderName" class="EuroMillions\vo\CardHolderName" use-column-prefix="false"/>
        <embedded name="expiry_date" class="EuroMillions\vo\ExpiryDate" use-column-prefix="false"/>
        <many-to-one target-entity="EuroMillions\entities\User" field="user" inversed-by="paymentMethod" />

    </entity>
</doctrine-mapping>